<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ashraf.inward">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/inward_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/inward_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Recycler_Screen"
            android:label="@string/title_activity_inward__list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".Display" />
        <activity android:name=".Editor" />
        <activity android:name=".Create_new" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>